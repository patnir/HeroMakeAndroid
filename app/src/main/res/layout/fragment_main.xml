<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rahulpatni.heromake.Fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/hero_bg_gradient">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="#253748"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/topBannerBar"
                android:padding="0dp"
                android:scaleType="fitStart" />

        </android.support.v7.widget.Toolbar>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/heroes"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"/>
        <Button
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/hero_button"
            android:text="Came by accident"
            android:textColor="#FAC740"
            android:drawableLeft="@drawable/lightning_icon"
            android:drawableRight="@drawable/item_selected_btn"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            />

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/hero_button"
            android:text="Genetic Mutation"
            android:textColor="#FAC740"
            android:drawableLeft="@drawable/atomic_icon"
            android:drawableRight="@drawable/item_selected_btn"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:id="@+id/button1" />

        <Button
            android:layout_marginTop="15dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/hero_button"
            android:text="Born with it"
            android:textColor="#FAC740"
            android:drawableLeft="@drawable/rocket_icon"
            android:drawableRight="@drawable/item_selected_btn"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:id="@+id/button2" />

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/hero_solid_button"
            android:text="CHOOSE POWERS"
            android:backgroundTint="#FAC740"

            android:textColor="#10161D"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:textSize="25dp"
            android:id="@+id/button3" />
    </LinearLayout>

</FrameLayout>
